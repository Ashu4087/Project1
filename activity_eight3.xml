<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ashutosh.demoproject.eight3"
    android:background="#f9db822a">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speak"
        android:id="@+id/eight3b1"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/eight3b2"
        android:layout_centerHorizontal="true"
        android:background="#bddc3f3f" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eight3e1"
        android:hint="Write Text"
        android:height="50dp"
        android:background="#fee75e5e"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/eight3b2"
        android:background="#e9b3b3"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/eight3b1"
        android:layout_alignStart="@+id/eight3b1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/eight3b1"
        android:layout_below="@+id/eight3e1"
        android:src="@drawable/b" />

</RelativeLayout>
